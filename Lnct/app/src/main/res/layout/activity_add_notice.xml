<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.admin.lnct.AddNotice"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notice"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            android:layout_margin="32dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/admin_id_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:boxStrokeWidth="8dp">

            <EditText
                android:id="@+id/admin_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Title"
                android:lines="2"
                android:maxLines="3"
                android:minLines="2"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:textColor="#ffcb08"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/admin_password_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:boxStrokeWidth="8dp">

            <EditText
                android:id="@+id/admin_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Description"
                android:inputType="textMultiLine"
                android:lines="10"
                android:maxLines="15"
                android:minLines="5"
                android:gravity="top|left"
                android:textColor="#ffcb08"
                android:textSize="24sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/add_student_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/filled_signin_button"
            android:drawableRight="@drawable/ic_send_black_24dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

</LinearLayout>
